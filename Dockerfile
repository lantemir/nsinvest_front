# Используем легкий образ Node.js
FROM node:20-alpine

# Устанавливаем рабочую директорию
WORKDIR /app

# Копируем зависимости
COPY package*.json ./

# Устанавливаем зависимости
RUN npm install

# Копируем оставшийся код
COPY . .

# Сборка приложения (если это прод-сборка)
RUN npm run build

# Открываем порт, на котором работает Next.js
EXPOSE 3000

# Запуск прод-сервера
CMD ["npm", "start"]